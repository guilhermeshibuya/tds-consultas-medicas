@page "{id:int}"
@model Consultas.Web.Pages.Especialidades.DeleteModel

<h1 class="mb-3">Detalhes da Especialidade para remover</h1>

<div class="row">
    <div class="col">
        <p>
            <strong>Nome:</strong>
            @Model.Especialidade.Nome
        </p>
     
    </div>
    <div class="col">
        <p>
            <strong>Descriçao:</strong>
            @Model.Especialidade.Descricao
        </p>
    </div>
</div>

</div>

<form method="post" class="form">
    <div class="form-group">
        <input 
            type="submit"
            value="Excluir"
            class="btn btn-danger"
        />
        <a asp-page="/especialidade/Index"
           class="btn btn-secondary"
        >
            Voltar
        </a>
    </div>
</form>