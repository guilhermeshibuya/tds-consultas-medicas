@page "{id:int}"
@model Consultas.Web.Pages.Especialidades.EditModel

<h1 class="mb-3">Editar Informações da Especialidade</h1>

<form method="post" class="form">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label asp-for="Especialidade.Nome"></label>
        <input asp-for="Especialidade.Nome"
               class="form-control" />
        <span asp-validation-for="Especialidade.Nome"
              class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Especialidade.Descricao"></label>
        <input asp-for="Especialidade.Descricao"
               class="form-control" />
        <span asp-validation-for="Especialidade.Descricao"
              class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit"
               class="btn btn-primary"
               value="Salvar" />
        <a asp-page="/Especialidades/Index"
           class="btn btn-secondary">
            Cancelar
        </a>
    </div>
</form>
