@page "{id:int}"
@model Consultas.Web.Pages.Medicos.Horarios.CreateModel

<h1 class="mb-3">
    Adicionar horário
</h1>

<form class="form" method="post">
    <div class="form-group">
        <label asp-for="DataHorario.DataHorario"></label>
        <input asp-for="DataHorario.DataHorario"
            type="datetime-local"
            class="form-control"
        />
    </div>
    <div class="form-group">
        <input 
            type="submit"    
            class="btn btn-primary"
            value="Adicionar"
        />
        <a asp-page="/Medicos/Index" class="btn btn-secondary">
            Voltar
        </a>
    </div>
</form>
